<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:background="@color/dark_gray"
    tools:context=".ui.fragments.detail.DetailFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_detail_back"
                android:layout_gravity="start|center_vertical"/>

            <TextView
                android:id="@+id/dateDayOfMonthTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="27"
                android:textColor="@color/white"
                android:layout_marginStart="12dp"/>

            <TextView
                android:id="@+id/dateMonthTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="марта"
                android:textColor="@color/white"
                android:layout_marginHorizontal="4dp"/>

            <TextView
                android:id="@+id/dateHourTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="17"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/dateMinuteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="37"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical">

            <ImageView
                android:id="@+id/overflowMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_overflow_menu"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/readyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_ready_text"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="12dp"
                android:visibility="gone"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </FrameLayout>

    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Title"
        android:background="@android:color/transparent"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionNext"/>

    <EditText
        android:id="@+id/textEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:text="Text"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@android:color/transparent"
        android:paddingTop="12dp"
        android:layout_weight="1"
        android:gravity="start|top"/>

</LinearLayout>